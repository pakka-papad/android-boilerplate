<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.SampleTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar" />

    <style name="SampleTheme" parent="NightAdjusted.SampleTheme"/>

    <style name="NightAdjusted.SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Sample.Splash" parent="NightAdjusted.SplashTheme">
        <item name="android:windowBackground">@drawable/still_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/SampleTheme</item>
    </style>
</resources>